{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2022", // or ESNext
        "module": "NodeNext", // critical: tells TS to output proper ESM
        "moduleResolution": "NodeNext", // aligns import resolution with Node ESM
        "outDir": "dist-scripts", // your build output folder
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["scripts/**/*.ts"]
}
